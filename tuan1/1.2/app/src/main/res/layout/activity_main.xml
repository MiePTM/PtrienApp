<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Art Image in White Box with Shadow -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/artworkImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="Artwork Image"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"/>
    </LinearLayout>

    <!-- Title, Author, and Year in Rectangular Box -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ECEBF4"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Title of the Art -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="TÊN TÁC PHẨM"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Author and Year -->
        <TextView
            android:id="@+id/authorYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="TÊN TÁC GIẢ (NĂM SÁNG TÁC)"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- Previous Button with Custom Color -->
        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:backgroundTint="#495D92"
            android:textColor="#FFFFFF"/>

        <!-- Next Button with Custom Color -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#495D92"
            android:textColor="#FFFFFF"
            android:layout_marginStart="32dp"/>
    </LinearLayout>
</LinearLayout>
